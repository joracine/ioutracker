{
  "name": "ioutracker",
  "version": "1.0.0",
  "description": "Tracks IOUs (I Owe You) transactions over time. ",
  "main": "index.js",
  "scripts": {
    "start": "nodemon src/index.ts",
    "build": "ncc build src/index.ts -o dist",
    "test": "jest",
    "format": "pretty-quick --no-restage",
    "format:staged": "pretty-quick --staged",
    "format:all": "prettier --write .",
    "format-check": "pretty-quick --check",
    "prepare": "husky install",
    "lint": "eslint . --ext .ts --max-warnings=0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joracine/ioutracker.git"
  },
  "keywords": [
    "IOU",
    "Debt",
    "Tracker"
  ],
  "author": "J-O Racine",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joracine/ioutracker/issues"
  },
  "homepage": "https://github.com/joracine/ioutracker#readme",
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.20.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
